{
  "name": "listening-party",
  "version": "1.0.0",
  "description": "Listening Party",
  "main": "index.ts",
  "author": "Max Kurapov <maxkurapov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.4",
    "@types/socket.io": "^2.1.4",
    "axios": "^0.19.2",
    "common": "file:./common",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.2",
    "query-string": "^6.11.1",
    "socket.io": "^2.3.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "NODE_ENV=dev node ./build/index.js",
    "start:prod": "NODE_ENV=production node ./build/index.js",
    "build": "npx tsc",
    "build:dev": "npx tsc && yarn build:client:dev",
    "build:client:dev": "cd client/ && yarn build:dev",
    "build:client:prod": "cd client/ && yarn build:prod",
    "build:common": "cd common/ && yarn link && npx tsc",
    "watch": "NODE_ENV=dev nodemon --watch 'app/**/*' -e ts,tsx --exec 'ts-node' ./index.ts",
    "heroku-build:client": "tsc & cd client/ && yarn link common && yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build:prod",
    "heroku-build:common": "cd common/ && npx tsc",
    "heroku-postbuild": "yarn build:common && yarn heroku-build:client"
  },
  "devDependencies": {
    "ts-node": "^8.8.2"
  }
}